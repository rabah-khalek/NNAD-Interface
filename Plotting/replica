file=$1
rm figs/replica.pdf
mv figs/* .temp_figs/.
rm ceres/*
cp ../$file/PDFGrids/* ceres/.
rm figs/*
gnuplot scripts/replica/ceres_2fl.gp

gs -q -dNOPAUSE -dBATCH -sDEVICE=pdfwrite -sOutputFile=merged.pdf figs/*
rm figs/*
mv merged.pdf figs/replica.pdf
mv .temp_figs/* figs/.
rm -r .temp_figs/*
open figs/replica.pdf
